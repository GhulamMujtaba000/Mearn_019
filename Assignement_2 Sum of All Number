    <h1>Sum Of All Number</h1>

    <script>

        let num=prompt("Please Enter the number and you will get sun of all number :");
            let result=0;
            for (let index = 0; index <= num; index++) {
                result=result+index;
                
                console.log("Sum of all number !"+result);

            }


    </script>

